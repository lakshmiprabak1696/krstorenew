{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible" id="error"><i
                        class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-sendgrid"
                      class="form-horizontal">
                     
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_cloud_bucket}}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_cloud_storage_bucket" id="module_cloud_storage_bucket" value="{{module_cloud_storage_bucket}}" class="form-control" required="true">                             
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_cloud_time }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_cloud_storage_expiration" id="module_cloud_storage_expiration" value="{{module_cloud_storage_expiration}}"class="form-control" required>                             
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_cloud_service_account }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_cloud_storage_service_account" id="module_cloud_storage_service_account" value="{{module_cloud_storage_service_account}}" class="form-control" required>                             
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_cloud_file_path }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_cloud_storage_file_path" id="module_cloud_storage_file_path" value="{{module_cloud_storage_file_path}}" class="form-control" required>                             
                        </div>
                    </div>
                            
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_cloud_storage_status" id="status_cloud_storage" class="form-control" >
                                {% if module_cloud_storage_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
 